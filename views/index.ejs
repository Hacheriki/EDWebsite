<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Мой магазин</title>
    <link rel="stylesheet" href="css/index_styles.css">
    <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
    <script src="scripts/jq.js"></script>
</head>
<script id="item-template" type="text/x-handlebars-template">

    {{#if products.length}}
        {{#each products}}
            <a href='/item?id={{product_id}}' class='product'>
                <div>
                    <img src='{{image_url}}'>
                    <h3>{{name}}</h3>
                    <p>Цена: {{price}} ₽</p>
                </div>
            </a>
        {{/each}}
    {{else}}
        <p>Нет новых продуктов</p>
    {{/if}}
</script>
<body>
<%- include('header') %>
<h2 class="featured-text">Новые товары</h2>
    <section class="featured-products">

    </section>
</body>
<script>
    const template = Handlebars.compile(document.querySelector('#item-template').innerHTML);

    const featuredProducts = $(".featured-products")
    $.get({
        url: './api/getFeaturedProducts',
        success: function (data) {
            console.log(data)
            featuredProducts.html(template({ products: data}))
        }
    })
</script>
</html>
